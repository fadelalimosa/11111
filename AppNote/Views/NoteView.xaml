<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppNote.Views.NoteView">
    <VerticalStackLayout Padding="10">
        <Label 
            FontSize="Medium"
            Text="Note Data"
            HorizontalOptions="Start"/>
        <Frame >
            <VerticalStackLayout>
                <Label FontSize="Small"  Text="Note Title :"   HorizontalOptions="Start"/>
                <Entry/>
                <Label FontSize="Small" Text="Note Description :" HorizontalOptions="Start"/>
                <Editor  FontSize="Medium" HeightRequest="150"/>
                <Button Text="Add Note" FontSize="Medium"/>
            </VerticalStackLayout>
        </Frame>
        <ListView >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="" Detail=""/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <HorizontalStackLayout Spacing="5">
            <Button Text="Remove" WidthRequest="80"/>
            <Button Text="Edit" WidthRequest="80"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentView>
